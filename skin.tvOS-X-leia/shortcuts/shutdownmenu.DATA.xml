<?xml version='1.0' encoding='UTF-8'?>
<shortcuts>
	<!-- Quit -->
	<shortcut>
		<visible>!System.HasAddon(service.libreelec.settings)</visible>
		<label>13009</label>
		<label2 />
		<defaultID>13009</defaultID>
		<icon>icons/quits.png</icon>
		<thumb />
		<action>XBMC.Quit()</action>
	</shortcut>
	<!-- Shutdown -->  
	<shortcut>
		<visible>System.CanPowerDown</visible>
		<label>13005</label>
		<label2 />
		<defaultID>13005</defaultID>
		<icon>icons/quits.png</icon>
		<thumb />
		<action>XBMC.Powerdown()</action>
	</shortcut>	  
	<!-- Suspend -->  
	<shortcut>
		<visible>System.CanSuspend</visible>
		<label>13011</label>
		<label2 />
		<defaultID>13011</defaultID>
		<icon>icons/quits.png</icon>
		<thumb />
		<action>XBMC.Suspend()</action>
	</shortcut>	  
	<!-- Reboot -->  
	<shortcut>
		<visible>System.CanReboot</visible>
		<label>13013</label>
		<label2 />
		<defaultID>13013</defaultID>
		<icon>icons/quits.png</icon>
		<thumb />
		<action>XBMC.Reset()</action>
	</shortcut>	  
	<!-- Logoff -->
	<shortcut>
		<visible>System.HasLoginScreen</visible>
		<label>logoff</label>
		<label2 />
		<defaultID>logoff</defaultID>
		<icon>icons/quits.png</icon>
		<thumb />
		<action>Activatewindow(29)</action>
	</shortcut>	  
	<!-- Timer -->  
	<shortcut>
		<label>Timer</label>
		<label2 />
		<defaultID>Timer</defaultID>
		<icon>icons/quits.png</icon>
		<thumb />
		<action>AlarmClock(Timer,Quit())</action>
	</shortcut>	
</shortcuts>